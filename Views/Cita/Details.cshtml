@model DBClinica_EL01.Models.Citas

@{
    ViewData["Title"] = "Details";
}

<h1>Detalle de Cita</h1>

<div>
    <h4>Cita Nro. @Html.DisplayFor(model => model.Nrocita)</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Pago)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Pago)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Fecha)
        </dt>
        <dd class = "col-sm-10">
            @Model.Fecha.ToString("dd/MM/yyyy")
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Estado)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Estado)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descrip)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descrip)
        </dd>
        <dt class = "col-sm-2">
            Médico: 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CodmedNavigation.Nommed)
        </dd>
        <dt class = "col-sm-2">
            Paciente: 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CodpacNavigation.Nompac)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model.Nrocita">Editar Cita</a> |
    <a class="btn btn-light" asp-action="Index">Regresar a Lista</a>
</div>
